<div class="mt-4">
    <h3>Tạo khoá học mới</h3>

    {{!-- Handle alert error --}}
    {{#each errors}}
    <div class="alert alert-danger" role="alert">
        {{this}}
    </div>
    {{/each}}

    <form method="POST" action="/courses/store">
        <div class="form-group">
            <label for="name">Tên khoá học</label>
            <input type="text" class="form-control" name="name" {{#if values}} value="{{values.name}}" {{/if}}>
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <input type="text" class="form-control" name="description" {{#if values}} value="{{values.description}}" {{/if}}>
        </div>
        <div class="form-group">
            <label for="videoId">Video ID</label>
            <input type="text" class="form-control" name="videoId" {{#if values}} value="{{values.videoId}}" {{/if}}>
        </div>
        <div class="form-group">
            <label for="level">Trình độ</label>
            <input type="text" value="{{course.level}}" class="form-control" name="level" {{#if values}} value="{{values.level}}" {{/if}}>
        </div>
        <button type="submit" class="btn btn-primary">Thêm khoá học</button>
    </form>
</div>