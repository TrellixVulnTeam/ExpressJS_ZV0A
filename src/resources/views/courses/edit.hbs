<div class="mt-4">
    <h3>Tạo khoá học mới</h3>
    <form method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên khoá học</label>
            <input type="text" value="{{course.name}}" class="form-control" name="name">
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <textarea class="form-control" name="description">{{course.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoId">Video ID</label>
            <input type="text" value="{{course.videoId}}" class="form-control" name="videoId">
        </div>
        <div class="form-group">
            <label for="level">Trình độ</label>
            <input type="text" value="{{course.level}}" class="form-control" name="level">
        </div>
        <button type="submit" class="btn btn-primary">Lưu Lại</button>
    </form>
</div>